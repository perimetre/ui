{
  "name": "@perimetre/ui",
  "description": "A component library made by @perimetre",
  "version": "0.1.0",
  "main": "build/index.js",
  "module": "build/index.es.js",
  "files": [
    "build",
    "README.md"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/perimetre/ui.git"
  },
  "author": "Perimetre (https://perimetre.co/)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/perimetre/ui/issues"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "scripts": {
    "prebuild": "rm -rf build && npm run check-commit",
    "build": "rollup -c",
    "start": "react-scripts start",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "prettier": "prettier --write \"{**/*.js,**/*.ts,**/*.tsx}\"",
    "lint": "eslint . --ext js --ext jsx --ext ts --ext tsx",
    "lint:fix": "npm run lint -- --fix",
    "type-check": "tsc --noEmit",
    "check-commit": "npm run type-check && npm run prettier && npm run lint:fix",
    "prepare": "npm run build",
    "upload": "npm publish --access public",
    "storybook": "start-storybook -p 6006 --no-dll",
    "build-storybook": "build-storybook --no-dll"
  },
  "dependencies": {},
  "peerDependencies": {
    "react": ">=17.0.1",
    "react-dom": ">=17.0.1",
    "styled-system": "^5.1.5",
    "styled-components": "^5.2.1"
  },
  "devDependencies": {
    "@babel/core": "^7.12.3",
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@rollup/plugin-commonjs": "^16.0.0",
    "@rollup/plugin-node-resolve": "^10.0.0",
    "@storybook/addon-actions": "^6.0.28",
    "@storybook/addon-essentials": "^6.0.28",
    "@storybook/addon-links": "^6.0.28",
    "@storybook/react": "^6.0.28",
    "@testing-library/jest-dom": "^5.11.5",
    "@testing-library/react": "^11.1.2",
    "@testing-library/user-event": "^12.2.2",
    "@types/faker": "^5.1.4",
    "@types/jest": "^26.0.15",
    "@types/lodash": "^4.14.165",
    "@types/node": "^14.14.7",
    "@types/react": "^16.9.56",
    "@types/react-dom": "^16.9.9",
    "@types/styled-components": "^5.1.4",
    "@types/styled-system": "^5.1.10",
    "@typescript-eslint/eslint-plugin": "^4.7.0",
    "@typescript-eslint/parser": "^4.7.0",
    "babel-loader": "^8.2.1",
    "eslint": "^7.13.0",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-react": "^7.21.5",
    "eslint-plugin-react-hooks": "^4.2.0",
    "faker": "^5.1.0",
    "husky": "^4.3.0",
    "lodash": "^4.17.20",
    "prettier": "^2.1.2",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-is": "^17.0.1",
    "react-scripts": "^4.0.0",
    "rollup": "^2.33.1",
    "rollup-plugin-peer-deps-external": "^2.2.4",
    "rollup-plugin-typescript2": "^0.29.0",
    "styled-components": "^5.2.1",
    "styled-system": "^5.1.5",
    "typescript": "^4.0.5",
    "web-vitals": "^0.2.4"
  }
}
