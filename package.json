{
  "name": "@perimetre/ui",
  "description": "A component library made by @perimetre",
  "version": "1.0.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/perimetre/ui.git"
  },
  "author": "Perimetre (https://perimetre.co/)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/perimetre/ui/issues"
  },
  "scripts": {
    "prestart": "npm run check-commit",
    "start": "npm run dev",
    "dev": "next dev",
    "build": "next build",
    "serve": "next start",
    "prettier": "prettier --write \"**/*.+(js|jsx|ts|tsx|json|md|mdx)\"",
    "lint": "eslint . --ext js --ext jsx --ext ts --ext tsx",
    "lint:fix": "npm run lint -- --fix",
    "lint:css": "stylelint \"./src/**/*.+(js|jsx|ts|tsx|css|scss)\"",
    "type-check": "tsc --noEmit",
    "check-commit": "npm run type-check && npm run prettier && npm run lint:css && npm run lint:fix",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook"
  },
  "dependencies": {
    "@tailwindcss/postcss7-compat": "^2.0.2",
    "@types/node": "^14.14.22",
    "@types/react": "^17.0.0",
    "@types/styled-components": "^5.1.7",
    "autoprefixer": "^9.8.6",
    "babel-plugin-styled-components": "^1.12.0",
    "next": "10.0.5",
    "postcss": "^7.0.35",
    "react": "17.0.1",
    "react-dom": "17.0.1",
    "styled-components": "^5.2.1",
    "tailwindcss": "npm:@tailwindcss/postcss7-compat@^2.0.2",
    "typescript": "^4.1.3"
  },
  "devDependencies": {
    "@babel/core": "^7.12.10",
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@storybook/addon-actions": "^6.1.15",
    "@storybook/addon-essentials": "^6.1.15",
    "@storybook/addon-links": "^6.1.15",
    "@storybook/react": "^6.1.15",
    "@typescript-eslint/eslint-plugin": "^4.14.1",
    "@typescript-eslint/parser": "^4.14.1",
    "babel-loader": "^8.2.2",
    "eslint": "^7.18.0",
    "eslint-config-prettier": "^7.2.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsdoc": "^31.4.0",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-react": "^7.22.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "husky": "^4.3.8",
    "prettier": "^2.2.1",
    "stylelint": "^13.9.0",
    "stylelint-config-recommended": "^3.0.0",
    "stylelint-config-styled-components": "^0.1.1"
  }
}
