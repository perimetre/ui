{
  "name": "@perimetre/ui",
  "description": "A component library made by @perimetre",
  "version": "1.0.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/perimetre/ui.git"
  },
  "author": "Perimetre (https://perimetre.co/)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/perimetre/ui/issues"
  },
  "main": "dist/index.js",
  "module": "dist/index.es.js",
  "files": [
    "dist"
  ],
  "scripts": {
    "prestart": "npm run check-commit",
    "start": "npm run storybook",
    "next:dev": "next dev",
    "next:build": "next build",
    "next:start": "next start",
    "prettier": "prettier --write \"**/*.+(js|jsx|ts|tsx|json|md|mdx)\"",
    "lint": "eslint . --ext js --ext jsx --ext ts --ext tsx",
    "lint:fix": "npm run lint -- --fix",
    "lint:css": "stylelint \"./src/**/*.+(js|jsx|ts|tsx|css|scss)\"",
    "type-check": "tsc --noEmit",
    "check-commit": "npm run type-check && npm run prettier && npm run lint:css && npm run lint:fix && npm run rollup:build",
    "storybook": "start-storybook -s ./public -p 6006",
    "build-storybook": "build-storybook",
    "rollup:build": "rollup -c",
    "rollup:watch": "rollup -c -w",
    "prepare": "npm run rollup:build"
  },
  "peerDependencies": {
    "react": "17.0.1",
    "react-dom": "17.0.1",
    "next": "10.0.5"
  },
